{
  "name": "nebulaenhance",
  "version": "0.0.1",
  "description": "Enhancer for Nebula. Adds some quality of life features to the nebula player.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:firefox": "concurrently \"npm:watch:ts\" \"npm:watch:other\" \"npm:ext:firefox\"",
    "build": "npm run clean && npm run build:ts && npm run build:other && npm run ext",
    "ext:firefox": "web-ext run --source-dir ./extension-dist/",
    "ext": "web-ext build --source-dir ./extension-dist/",
    "watch:ts": "tsc -w --sourceMap",
    "watch:other": "cpx \"src/**/*.!(ts)\" extension-dist -w",
    "build:ts": "tsc",
    "build:other": "cpx \"src/**/*.!(ts)\" extension-dist",
    "clean": "rimraf extension-dist"
  },
  "keywords": [
    "nebula",
    "watchnebula",
    "enhancer"
  ],
  "author": "cpiber",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "web-ext": "^5.5.0"
  }
}
