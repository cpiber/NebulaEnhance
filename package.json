{
  "name": "nebulaenhance",
  "version": "0.2.4",
  "description": "Enhancer for Nebula. Adds some quality of life features to the nebula player.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run build:ts && npm run build:css && npm run build:other && npm run ext",
    "build:light": "rollup -c rollup.config.js && rollup -c rollup.css.config.js && npm run build:other",
    "start": "concurrently \"npm:watch:ts\" \"npm:watch:css\" \"npm:watch:other\"",
    "start:firefox": "[ -d extension-dist ] || npm run build:light && concurrently \"npm:start\" \"npm:ext:firefox\"",
    "start:chromium": "[ -d extension-dist ] || npm run build:light && concurrently \"npm:start\" \"npm:ext:chromium\"",
    "ext": "web-ext build",
    "ext:firefox": "web-ext run --keep-profile-changes -p dev",
    "ext:android": "web-ext run --target firefox-android --keep-profile-changes -p dev",
    "ext:chromium": "web-ext run --target chromium",
    "watch:ts": "rollup -c rollup.config.js -w",
    "watch:css": "rollup -c rollup.css.config.js -w",
    "watch:other": "concurrently \"cpx \\\"src/**/*.!(d.ts|ts|xcf|@(sa|sc|c)ss)\\\" extension-dist -w\" \"cpx \\\"src/**/*.ts\\\" extension-dist/src -w\"",
    "build:ts": "rollup -c rollup.config.js --environment BUILD",
    "build:css": "rollup -c rollup.css.config.js --environment BUILD",
    "build:other": "cpx \"src/**/*.!(d.ts|ts|xcf|@(sa|sc|c)ss)\" extension-dist",
    "lint": "web-ext lint",
    "clean": "rimraf extension-dist"
  },
  "keywords": [
    "nebula",
    "watchnebula",
    "enhancer"
  ],
  "author": "cpiber",
  "license": "ISC",
  "dependencies": {
    "querystring": "^0.2.1",
    "webextension-polyfill": "^0.7.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.4.1",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/firefox-webext-browser": "^82.0.0",
    "@types/video.js": "^7.3.11",
    "autoprefixer": "^10.2.4",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "dotenv": "^8.2.0",
    "fibers": "^5.0.0",
    "glob": "^7.1.6",
    "postcss": "^8.2.6",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.8",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "web-ext": "^5.5.0"
  },
  "homepage": "https://github.com/cpiber/NebulaEnhance#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/cpiber/NebulaEnhance.git"
  },
  "bugs": {
    "url": "https://github.com/cpiber/NebulaEnhance/issues",
    "email": "cp.piber@gmail.com"
  },
  "webExt": {
    "sourceDir": "./extension-dist",
    "run": {
      "startUrl": [
        "https://nebula.app"
      ]
    }
  }
}
