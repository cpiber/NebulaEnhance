{
  "name": "nebulaenhance",
  "version": "0.0.2",
  "description": "Enhancer for Nebula. Adds some quality of life features to the nebula player.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm:watch:ts\" \"npm:watch:other\"",
    "start:firefox": "concurrently \"npm:watch:ts\" \"npm:watch:other\" \"npm:ext:firefox\"",
    "start:chromium": "concurrently \"npm:watch:ts\" \"npm:watch:other\" \"npm:ext:chromium\"",
    "build": "npm run clean && npm run build:ts && npm run build:other && npm run ext",
    "ext:firefox": "web-ext run --source-dir ./extension-dist/ --keep-profile-changes -p dev",
    "ext:android": "web-ext run --source-dir ./extension-dist/ --target firefox-android --keep-profile-changes -p dev",
    "ext:chromium": "web-ext run --source-dir ./extension-dist/ --target chromium",
    "ext": "web-ext build --source-dir ./extension-dist/",
    "watch:ts": "rollup -c rollup.config.js -w",
    "watch:other": "concurrently \"cpx \\\"src/**/*.!(ts|xcf)\\\" extension-dist -w\" \"cpx \\\"src/**/*.ts\\\" extension-dist/src -w\"",
    "build:ts": "rollup -c rollup.config.js",
    "build:other": "cpx \"src/**/*.!(ts|xcf)\" extension-dist",
    "clean": "rimraf extension-dist"
  },
  "keywords": [
    "nebula",
    "watchnebula",
    "enhancer"
  ],
  "author": "cpiber",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "0.0.129",
    "@types/video.js": "^7.3.11",
    "concurrently": "^5.3.0",
    "cpx": "^1.5.0",
    "glob": "^7.1.6",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.5",
    "rollup-plugin-typescript": "^1.0.1",
    "typescript": "^4.1.3",
    "web-ext": "^5.5.0"
  }
}
