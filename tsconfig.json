{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "extension-dist",
        "typeRoots": [
            "./src/types",
            "node_modules/@types"
        ],
        "types": ["chrome"],
        "lib": ["esnext", "dom"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}