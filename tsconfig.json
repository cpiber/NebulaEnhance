{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "typeRoots": [
      "./src/types",
      "node_modules/@types"
    ],
    "target": "ES5",
    "lib": ["esnext", "es5", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}