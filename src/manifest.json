{
	"manifest_version": 2,
	"name": "Enhancer for Nebula",
	"description": "Enhancer for Nebula. Adds some quality of life features to the nebula player.",
	"version": "0.0.1",
	"icons": {
		"64": "icons/icon.png"
	},
	"background": {
		"scripts": [
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.player.zype.com/embed/*"
			],
			"js": [
				"content_script.js"
			],
			"all_frames": true
		}
	],
	"web_accessible_resources": [
		"zype.js"
	],
	"permissions": [
		"storage"
	],
	"browser_action": {
		"default_icon": {
			"64": "icons/icon.png"
		},
		"default_title": "Enhancer for Nebula"
	},
	"options_ui": {
		"page": "options/index.html",
		"browser_style": true,
		"chrome_style": true
	},
	"browser_specific_settings": {
	  "gecko": {
		"id": "nebula-enhancer@piber.at"
	  }
	}
}